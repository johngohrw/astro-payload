---
interface Props {
  topCaption: string;
  title: string;
  subtitle: string;
  columns: [Section, Section, Section];
}

type Section = {
  icon: string; // todo: figure out some way to do string --> svg mapping. a library perhaps?
  title: string;
  caption: string;
  actionLabel: string;
  actionHref: string;
};

const props = Astro.props;
---

<div class="bg-gray-900 py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:text-center">
      <h2 class="text-base/7 font-semibold text-indigo-400">
        {props.topCaption}
      </h2>
      <p
        class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-white sm:text-5xl lg:text-balance"
      >
        {props.title}
      </p>
      <p class="mt-6 text-lg/8 text-gray-300">
        {props.subtitle}
      </p>
    </div>
    <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
      <dl
        class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3"
      >
        {
          props.columns.map((col) => (
            <div class="flex flex-col">
              <dt class="flex items-center gap-x-3 text-base/7 font-semibold text-white">
                <svg
                  viewBox="0 0 20 20"
                  fill="currentColor"
                  data-slot="icon"
                  aria-hidden="true"
                  class="size-5 flex-none text-indigo-400"
                >
                  <path
                    d="M5.5 17a4.5 4.5 0 0 1-1.44-8.765 4.5 4.5 0 0 1 8.302-3.046 3.5 3.5 0 0 1 4.504 4.272A4 4 0 0 1 15 17H5.5Zm3.75-2.75a.75.75 0 0 0 1.5 0V9.66l1.95 2.1a.75.75 0 1 0 1.1-1.02l-3.25-3.5a.75.75 0 0 0-1.1 0l-3.25 3.5a.75.75 0 1 0 1.1 1.02l1.95-2.1v4.59Z"
                    clip-rule="evenodd"
                    fill-rule="evenodd"
                  />
                </svg>
                {col.title}
              </dt>
              <dd class="mt-4 flex flex-auto flex-col text-base/7 text-gray-400">
                <p class="flex-auto">{col.caption}</p>
                <p class="mt-6">
                  <a
                    href={col.actionHref}
                    class="text-sm/6 font-semibold text-indigo-400 hover:text-indigo-300"
                  >
                    {col.actionLabel} <span aria-hidden="true">â†’</span>
                  </a>
                </p>
              </dd>
            </div>
          ))
        }
      </dl>
    </div>
  </div>
</div>
