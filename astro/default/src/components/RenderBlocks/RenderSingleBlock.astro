---
import ContactSimpleFourColBlock from "./Blocks/ContactSimpleFourColBlock.astro";
import FeatSimpleThreeColBlock from "./Blocks/FeatSimpleThreeColBlock.astro";
import HeroWithOffsetImgBlock from "./Blocks/HeroWithOffsetImgBlock.astro";
import type { BlockComponent, BlockType, BlockTypeEnum } from "./types";

interface Props {
  block: BlockType;
}

const { block } = Astro.props;

const typeRendererMap: Record<BlockTypeEnum, BlockComponent> = {
  heroWithOffsetImage: HeroWithOffsetImgBlock,
  imageGrid: HeroWithOffsetImgBlock,
  richText: HeroWithOffsetImgBlock,
  featSimpleThreeCol: FeatSimpleThreeColBlock,
  contactSimpleFourCol: ContactSimpleFourColBlock,
};

const Renderer = typeRendererMap[block.blockType];
---

{Renderer && <Renderer block={block} />}
