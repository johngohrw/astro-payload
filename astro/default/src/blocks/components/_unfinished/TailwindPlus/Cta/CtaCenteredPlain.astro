---
export interface Props {
  heading?: string;
  description?: string;
  primaryCtaLabel?: string;
  primaryCtaHref?: string;
  secondaryCtaLabel?: string;
  secondaryCtaHref?: string;
}

const {
  heading = "Boost your productivity. Start using our app today.",
  description = "Incididunt sint fugiat pariatur cupidatat consectetur sit cillum anim id veniam aliqua proident excepteur commodo do ea.",
  primaryCtaLabel = "Get started",
  primaryCtaHref = "#",
  secondaryCtaLabel = "Learn more",
  secondaryCtaHref = "#",
} = Astro.props;
---

<div class="bg-indigo-700">
  <div class="px-6 py-24 sm:py-32 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2
        class="text-4xl font-semibold tracking-tight text-balance text-white sm:text-5xl"
      >
        {heading}
      </h2>
      <p class="mx-auto mt-6 max-w-xl text-lg/8 text-pretty text-indigo-200">
        {description}
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a
          href={primaryCtaHref}
          class="rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-indigo-600 shadow-xs hover:bg-indigo-50 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white dark:shadow-none"
        >
          {primaryCtaLabel}
        </a>
        <a href={secondaryCtaHref} class="text-sm/6 font-semibold text-white">
          {secondaryCtaLabel}
          <span aria-hidden="true">â†’</span>
        </a>
      </div>
    </div>
  </div>
</div>
