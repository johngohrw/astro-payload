---
export interface Props {
  heading?: string;
  description?: string;
  primaryCtaLabel?: string;
  primaryCtaHref?: string;
  secondaryCtaLabel?: string;
  secondaryCtaHref?: string;
}

const {
  heading = "Boost your productivity today",
  description = "Incididunt sint fugiat pariatur cupidatat consectetur sit cillum anim id veniam aliqua proident excepteur commodo do ea.",
  primaryCtaLabel = "Get started",
  primaryCtaHref = "#",
  secondaryCtaLabel = "Learn more",
  secondaryCtaHref = "#",
} = Astro.props;
---

<div class="bg-white dark:bg-gray-900">
  <div class="mx-auto max-w-7xl py-0 sm:px-6 sm:py-12 lg:px-8">
    <div
      class="relative isolate overflow-hidden bg-gray-900 px-6 py-24 text-center shadow-2xl sm:rounded-3xl sm:px-16 dark:bg-gray-800 dark:shadow-none dark:after:pointer-events-none dark:after:absolute dark:after:inset-0 dark:after:inset-ring dark:after:inset-ring-white/10 dark:after:sm:rounded-3xl"
    >
      <h2
        class="text-4xl font-semibold tracking-tight text-balance text-white sm:text-5xl"
      >
        {heading}
      </h2>
      <p class="mx-auto mt-6 max-w-xl text-lg/8 text-pretty text-gray-300">
        {description}
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a
          href={primaryCtaHref}
          class="rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-gray-900 shadow-xs hover:bg-gray-100 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white dark:bg-white/10 dark:text-white dark:shadow-none dark:inset-ring dark:inset-ring-white/5 dark:hover:bg-white/15 dark:focus-visible:outline-white"
        >
          {primaryCtaLabel}
        </a>
        <a href={secondaryCtaHref} class="text-sm/6 font-semibold text-white">
          {secondaryCtaLabel}
          <span aria-hidden="true">â†’</span>
        </a>
      </div>
      <svg
        viewBox="0 0 1024 1024"
        aria-hidden="true"
        class="absolute top-1/2 left-1/2 -z-10 size-256 -translate-x-1/2 mask-[radial-gradient(closest-side,white,transparent)]"
      >
        <circle
          r="512"
          cx="512"
          cy="512"
          fill="url(#boost-radial-gradient)"
          fill-opacity="0.7"></circle>
        <defs>
          <radialGradient id="boost-radial-gradient">
            <stop stop-color="#7775D6"></stop>
            <stop offset="1" stop-color="#E935C1"></stop>
          </radialGradient>
        </defs>
      </svg>
    </div>
  </div>
</div>
