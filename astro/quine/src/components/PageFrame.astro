---
import type { HTMLAttributes } from "astro/types";
import { cls } from "rengwutils";

interface Props extends HTMLAttributes<"div"> {
  innerProps?: HTMLAttributes<"div">;
}
const { innerProps, ...restProps } = Astro.props;

const { ...innerRestProps } = innerProps ?? {};
---

<div class={cls("frame", restProps.class ?? false)} {...restProps}>
  <div
    class={cls("frame-content", innerRestProps.class ?? false)}
    {...innerRestProps}
  >
    <slot />
  </div>
</div>

<style>
  .frame {
    width: 100%;
    padding: 0 var(--content-padding-x);

    display: flex;
    flex-flow: column nowrap;
    align-items: center;
  }
  .frame-content {
    width: 100%;
    height: 100%;
    max-width: 1440px;
  }
</style>
