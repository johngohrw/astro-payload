---
import type { HTMLAttributes } from "astro/types";
import { cls } from "rengwutils";

interface Props extends HTMLAttributes<"div"> {
  innerProps?: HTMLAttributes<"div">;
}
const { innerProps, class: outerClass, ...restProps } = Astro.props;

const { class: innerClass, ...innerRestProps } = innerProps ?? {};
---

<div class={cls("frame", outerClass ?? false)} {...restProps}>
  <slot name="prefix" />
  <div class={cls("frame-content", innerClass ?? false)} {...innerRestProps}>
    <slot />
  </div>
  <slot name="suffix" />
</div>

<style>
  .frame {
    width: 100%;
    padding: 0 var(--content-padding-x);

    display: flex;
    flex-flow: column nowrap;
    align-items: center;
  }
  .frame-content {
    width: 100%;
    height: 100%;
    max-width: 1440px;
  }
</style>
