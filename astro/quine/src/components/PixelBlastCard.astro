---
import type { HTMLAttributes } from "astro/types";
import CardSection from "./CardSection.astro";
import PixelBlast from "./PixelBlast";
import { cls } from "rengwutils";

interface Props extends HTMLAttributes<"div"> {}
const { ...restProps } = Astro.props;
---

<CardSection
  {...restProps}
  class={cls(
    "flex items-center justify-center w-full relative overflow-hidden !bg-black",
    restProps.class ?? false,
  )}
>
  <div class="absolute inset-0 z-0">
    <div
      style={{
        width: "100%",
        height: "100%",
        position: "relative",
      }}
    >
      <PixelBlast
        client:visible
        variant="circle"
        pixelSize={3}
        color="#555"
        patternScale={3}
        patternDensity={1}
        pixelSizeJitter={0}
        enableRipples
        rippleSpeed={0.4}
        rippleThickness={0.12}
        rippleIntensityScale={1.5}
        liquid={false}
        liquidStrength={0.12}
        liquidRadius={1.2}
        liquidWobbleSpeed={5}
        speed={0.5}
        edgeFade={0}
      />
    </div>
  </div>
  <slot />
</CardSection>
