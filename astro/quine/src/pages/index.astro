---
import { Button } from "@/components/Button/Button";
import CardSection from "@/components/CardSection.astro";
import ContactsSection from "@/components/ContactsSection.astro";
import HeroLetters from "@/components/HeroLetters/HeroLetters.astro";
import PageFrame from "@/components/PageFrame.astro";
import PageWidthBrandLetters from "@/components/PageWidthBrandLetters.astro";
import PixelBlast from "@/components/PixelBlast";
import PixelBlastCard from "@/components/PixelBlastCard.astro";
import { ScrambleInWrapper } from "@/components/ScrambleIn/ScrambleInWrapper";
import ScrollSmootherWrapper from "@/components/ScrollSmoother/ScrollSmootherWrapper.astro";
import SectionBodyText from "@/components/SectionBodyText.astro";
import SectionCaptionText from "@/components/SectionCaptionText.astro";
import SectionHeaderText from "@/components/SectionHeaderText.astro";
import ServicesSection from "@/components/ServicesSection.astro";
import ShinyText from "@/components/ShinyText/ShinyText";
import { WorksSection } from "@/components/WorksSection";
import QuineLayout from "@/layouts/QuineLayout.astro";
import { Icon } from "astro-icon/components";
import { HalftoneDots } from "@paper-design/shaders-react";
---

<QuineLayout>
  <div style={{ paddingTop: "var(--site-header-height)" }}></div>
  <PageFrame
    innerProps={{
      style: {
        paddingBottom: "6rem",
        display: "flex",
        flexFlow: "column nowrap",
      },
    }}
  >
    <div class="heroLettersWrapper" style={{ padding: "2rem 0 6rem" }}>
      <HeroLetters />
    </div>
    <div
      style={{
        width: "100%",
        maxWidth: "45rem",
        textWrap: "balance",
      }}
    >
      <SectionCaptionText> a digital design studio </SectionCaptionText>
      <SectionHeaderText>
        Creating memorable brand experiences, engineered for maximum impact.
      </SectionHeaderText>
      <SectionBodyText
        >We help founders and businesses make big moves by crafting delightful
        websites with design that works.
      </SectionBodyText>
      <div class="flex flex-row flex-nowrap gap-4">
        <Button type="secondary" smoothScrollTo="#contact" client:load>
          <span style={{ marginRight: "0.5rem" }}>Get in touch</span>
        </Button>
        <Button smoothScrollTo="#services" client:load>
          <span style={{ marginRight: "0.5rem" }}>Learn how</span>
          <Icon name="lucide:arrow-right" />
        </Button>
      </div>
    </div>
  </PageFrame>
  <PageFrame
    innerProps={{
      id: "services",
      style: { padding: "var(--site-header-height) 0 6rem" },
    }}
  >
    <div
      class="w-full h-[48rem] flex items-center justify-center relative rounded-xl overflow-hidden"
    >
      <div
        style={{
          maxWidth: "38rem",
          textAlign: "center",
          textWrap: "balance",
          zIndex: "10",
          filter: "invert(1)",
        }}
      >
        <SectionCaptionText> what we do </SectionCaptionText>
        <SectionHeaderText noMargin>
          We create bespoke websites and digital experiences to help brands and
          founders establish trust, build traction, and disrupt categories.
        </SectionHeaderText>
      </div>
      <div class="absolute inset-0 z-0">
        <HalftoneDots
          client:idle
          width="100%"
          height="100%"
          image="/images/unsplash1.jpg"
          colorBack="#4c4343"
          colorFront="#1a1709"
          originalColors={false}
          type="gooey"
          grid="hex"
          inverted={false}
          size={0.33}
          radius={1.63}
          contrast={0.1}
          grainMixer={0.31}
          grainOverlay={0.21}
          grainSize={0.1}
          fit="cover"
        />
      </div>
    </div>
  </PageFrame>
  <PageFrame
    innerProps={{
      style: { display: "flex", padding: "4rem 0", alignItems: "center" },
    }}
  >
    <ServicesSection />
  </PageFrame>
  <PageFrame
    innerProps={{
      style: {
        paddingTop: "var(--site-header-height)",
        paddingBottom: "12rem",
      },
      id: "works",
    }}
  >
    <SectionCaptionText>collection of past projects</SectionCaptionText>
    <SectionHeaderText>Works</SectionHeaderText>

    <WorksSection client:visible />
  </PageFrame>
  <div id="contact"></div>
  <ContactsSection />

  <style>
    .heroLettersWrapper {
      margin: calc(var(--content-scale) * 2) 0;
      flex-grow: 1;
    }

    .heroCaption {
      width: 100%;
      max-width: 45rem;
      text-wrap: balance;
    }
  </style>
</QuineLayout>
