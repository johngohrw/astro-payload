---
export interface Office {
  name: string;
  lines: string[]; // address lines
}

interface Props {
  title: string;
  subtitle?: string;
  offices: Office[];
}

const { title, subtitle, offices } = Astro.props;
---

<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:mx-0">
      <h2
        class="text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl"
      >
        {title}
      </h2>

      {subtitle && <p class="mt-6 text-lg/8 text-gray-600">{subtitle}</p>}
    </div>

    <div
      class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-8 text-base/7
             sm:grid-cols-2 sm:gap-y-16
             lg:mx-0 lg:max-w-none lg:grid-cols-4"
    >
      {
        offices.map((office) => (
          <div>
            <h3 class="border-l border-indigo-600 pl-6 font-semibold text-gray-900">
              {office.name}
            </h3>

            <address class="border-l border-gray-200 pt-2 pl-6 text-gray-600 not-italic">
              {office.lines.map((line) => (
                <p>{line}</p>
              ))}
            </address>
          </div>
        ))
      }
    </div>
  </div>
</div>
