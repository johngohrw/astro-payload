---
import type { Page } from "payload-instance";

export type BlockType = NonNullable<Page["layout"]>[number];
type BlockComponent = (_props: { block: BlockType }) => any;

interface Props {
  block: BlockType;
}

const { block } = Astro.props;

const typeRendererMap: Record<string, BlockComponent> = {
  // hero: Hero,
};

const Renderer = typeRendererMap["hero"];
---

{Renderer && <Renderer block={block} />}
