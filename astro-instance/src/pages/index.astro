---
import RenderBlocks from "@/components/RenderBlocks/RenderBlocks.astro";
import Layout from "../layouts/Layout.astro";
import { payloadQuery } from "../utils/payloadQuery";
import HeroWithOffsetImg from "@/components/TailwindPlus/Hero/HeroWithOffsetImg.astro";
import FeatSimpleThreeCol from "@/components/TailwindPlus/Feature/FeatSimpleThreeCol.astro";

const pageResponse = await payloadQuery.find({
  collection: "pages",
  where: { slug: { equals: "home" } },
});
const page = pageResponse.docs[0];
---

<Layout title={page.title}>
  <HeroWithOffsetImg
    title="Test"
    subtitle="Caption"
    images={[
