---
import RenderBlocks from "@/components/RenderBlocks/RenderBlocks.astro";
import Layout from "../layouts/Layout.astro";
import { payloadQuery } from "../utils/payloadQuery";

const pageResponse = await payloadQuery.find({
  collection: "pages",
  where: { slug: { equals: "home" } },
});
const page = pageResponse.docs[0];
---

<Layout title={page.title}>
  <RenderBlocks blocks={page.contentBlocks} />
</Layout>
