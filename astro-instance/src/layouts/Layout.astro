---
import SiteHeader from "@/components/SiteHeader.astro";
import "@/styles/global.css";

const { title = "Astro Site" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="header">
      <SiteHeader />
    </div>
    <div class="content">
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>

<style lang="scss">
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    overscroll-behavior: none;
  }

  body {
    display: flex;
    flex-flow: column nowrap;
  }

  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
  }

  .content {
    display: flex;
    flex-flow: column nowrap;
    align-items: center;

    main {
      width: 100%;
      // max-width: 1200px;
    }
  }
</style>
