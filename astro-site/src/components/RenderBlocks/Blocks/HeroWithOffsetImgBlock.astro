---
import HeroWithOffsetImg from "@/components/TailwindPlus/Hero/HeroWithOffsetImg.astro";
import type { BlockTypeOf } from "../types";

const { block: incomingBlock } = Astro.props;

const block: BlockTypeOf<"heroWithOffsetImage"> = incomingBlock;

const images = [0, 1, 2, 3, 4].map((i) => {
  if (!block.images || block.images.length - 1 < i) return "#";
  if (typeof block.images[i].image === "number") return "#";
  return block.images[i].image.url ?? "#";
}) as [string, string, string, string, string];
---

<HeroWithOffsetImg
  title={block.title}
  subtitle={block.subtitle ?? ""}
  images={images}
  buttonLabel={block.primaryAction?.label ?? ""}
  buttonHref={block.primaryAction?.href ?? ""}
  subActionLabel={block.secondaryAction?.label ?? ""}
  subActionHref={block.secondaryAction?.href ?? ""}
/>
